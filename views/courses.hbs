{{#section 'js'}}
<script>
    $('.btn-buycourse').on('click', function () {
        var id = $(this).data('info').id;
        $('#buycourseModal .modal-body .idInput').val(id);
        $('#buycourseModal').modal();
    });
</script>
{{/section}}
{{> header }}
<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb-area">
  <!-- Breadcumb -->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
      <li class="breadcrumb-item"><a href="#">Khóa học</a></li>
      <li class="breadcrumb-item active" aria-current="page">danh sách khóa học</li>
    </ol>
  </nav>
</div>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Catagory ##### -->
<div class="clever-catagory bg-img d-flex align-items-center justify-content-center p-3"
  style="background-image: url(img/bg-img/bg2.jpg);">
  <h3>Các khóa học của chúng tôi</h3>
</div>

<!-- ##### Popular Course Area Start ##### -->
<section class="popular-courses-area section-padding-100">
  <div class="container">
    <div class="row">
      <!-- Single Popular Course -->
      {{#each listCourse}}
      <div class="col-12 col-md-6 col-lg-4">
        <div class="single-popular-course mb-100 wow fadeInUp" data-wow-delay="250ms">
          <a href="/single-course/{{course_id}}"><img src="img/bg-img/c1.jpg" alt=""></a>
          <!-- Course Content -->
          <div class="course-content">
            <a style="color: black;" href="/single-course/{{course_id}}">
              <h4>{{course_name}}</h4>
            </a>
            <div class="meta d-flex align-items-center">
              <a href="#">{{account_first_name}} {{account_last_name}}</a>
              <span><i class="fa fa-circle" aria-hidden="true"></i></span>
              <a href="#">{{subject_name}}</a>
            </div>
            <p>{{course_description}}
            </p>
          </div>
          <!-- Seat Rating Fee -->
          <div class="seat-rating-fee d-flex justify-content-between">
            <div class="seat-rating h-100 d-flex align-items-center">
              <div class="seat">
                <i class="fa fa-user" aria-hidden="true"></i> 10
              </div>
              <div class="rating">
                <i class="fa fa-star" aria-hidden="true"></i> 4.5
              </div>
            </div>
            <div class="course-fee h-100">
              <a href="#" class="free btn-buycourse" data-toggle="modal" data-info='{"id":{{course_id}} }'>{{course_price}}đ</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="row">
      <div class="col-12">
        <div class="load-more text-center wow fadeInUp" data-wow-delay="1000ms">
          <a href="#" class="btn clever-btn btn-2">Load More</a>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="modal fade" id="buycourseModal" tabindex="-1" role="dialog" aria-hidden="true" style="z-index: 2000;">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <form method="POST" action="/buycourse">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Mua khóa học</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input name="id" type="hidden" class="idInput">
                    <p>Bạn có chắc muốn mua khóa học này?</p>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>

                </div>
            </form>
        </div>
    </div>
</div>
<!-- ##### Popular Course Area End ##### -->

{{> footer }}